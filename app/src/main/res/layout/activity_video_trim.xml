<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/vv_video_crop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_video_crop_duration"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="14dp"
            android:gravity="center_horizontal"
            android:text="拖动选择视频片段"
            android:layout_marginTop="10dp"/>

        <FrameLayout
            android:layout_below="@id/tv_video_crop_duration"
            android:id="@+id/rl_video_thumb"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_video_crop"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <com.lq.mediakit.widget.VideoSliceSeekBar
                android:id="@+id/seek_bar_video_crop"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_below="@id/rl_video_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_video_trim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trim"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_video_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_video_compress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compress"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
